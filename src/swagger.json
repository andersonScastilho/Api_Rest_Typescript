{
  "openapi": "3.0.0",
  "info": {
    "title": "Api vagas de emprego",
    "description": "Essa api foi desenvolvida para estudar typescrypt, sequelize e express",
    "contact": {
      "name": "Anderson Leonardo",
      "email": "leosilvacast@gmail.com"
    },
    "version": "1.0.0"
  },
  "paths": {
    "/companies": {
      "post": {
        "description": "Adicionar uma empresa",
        "requestBody": {
          "description": "Dados nescessario para adicionar uma empresa",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestCompany"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Empresa cadastrada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseCompany"
                }
              }
            }
          },
          "400": {
            "description": "NÃ£o foi possivel cadastrar esta empresa"
          }
        }
      },
      "get": {
        "description": "Empresas cadastradas",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ResponseCompany"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Ocorreu um erro ao consultar empresas"
          }
        }
      }
    },
    "/companies/{id}": {
      "get": {
        "description": "Buscar uma empresa atravez do id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id da empresa",
            "required": true,
            "type": "number",
            "format": "integer"
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseCompany"
                }
              }
            }
          },
          "400": {
            "description": "Ocorreu um erro ao buscar empresa"
          }
        }
      },
      "delete": {
        "description": "Deletar uma empresa cadastrada",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id da empresa",
            "type": "number",
            "format": "integer"
          }
        ],
        "responses": {
          "204": {
            "description": "Empresa deletada com sucesso"
          },
          "400": {
            "description": "Ocorreu um erro ao deletar empresa"
          }
        }
      },
      "put": {
        "description": "Atualizar uma empresa",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id da empresa",
            "type": "number",
            "format": "integer"
          }
        ],
        "requestBody": {
          "description": "Dados nescessario para adicionar uma empresa",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestCompany"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Empresa atualizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseCompany"
                }
              }
            }
          },
          "400": {
            "description": "Ocorreu um erro ao atualizar a empresa"
          }
        }
      }
    },
    "/jobs": {
      "get": {
        "description": "Mostra todos os jobs",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ResponseJob"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RequestCompany": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Nubank"
          },
          "website": {
            "type": "string",
            "example": "www.Nubank.com"
          },
          "bio": {
            "type": "string",
            "example": "Somos a nubank, um banco digital"
          },
          "email": {
            "type": "string",
            "example": "nubank@nubank.com"
          }
        }
      },
      "ResponseCompany": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Nubank"
          },
          "website": {
            "type": "string",
            "example": "www.Nubank.com"
          },
          "bio": {
            "type": "string",
            "example": "Somos a nubank, um banco digital"
          },
          "email": {
            "type": "string",
            "example": "nubank@nubank.com"
          },
          "id": {
            "type": "number",
            "description": "Id da empresa",
            "format": "integer"
          }
        }
      },
      "ResponseJob": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": "1"
          },
          "title": {
            "type": "string",
            "example": "Desenvolvedor frontend"
          },
          "description": {
            "type": "string",
            "example": "Requisitos: React, Javascript, html e css"
          },
          "limitDate": {
            "type": "date"
          },
          "companyId": {
            "type": "number",
            "example": "1"
          },
          "createdAt": {
            "type": "number",
            "example": "2023-05-20T18:07:25.551Z"
          },
          "updatedAt": {
            "type": "number",
            "example": "2023-05-20T18:07:25.551Z"
          },
          "company": {
            "type": "object",
            "properties": {
              "id": {
                "type": "number",
                "example": "1"
              },
              "name": {
                "type": "string",
                "example": "Nubank"
              },
              "bio": {
                "type": "string",
                "example": "Lorem ipsum"
              },
              "website": {
                "type": "string",
                "example": "onebitcode.com"
              },
              "email": {
                "type": "string",
                "example": "teste@gmail.com"
              },
              "createdAt": {
                "type": "date",
                "example": "2023-05-20T18:07:25.551Z"
              },
              "updatedAt": {
                "type": "date",
                "example": "2023-05-20T18:07:25.551Z"
              }
            }
          }
        }
      }
    }
  }
}